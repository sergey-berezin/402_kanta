<Window x:Class="WpfApp.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="NameWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Experiment Name:" Margin="0,0,0,10"/>
        <TextBox x:Name="NameTextBox" Width="250" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Width="75" Margin="5,0,0,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
